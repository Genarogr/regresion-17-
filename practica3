##vectores
a <- 2+3  #vector longitudinal
a
b <- c(3,4)-c(6,1)  ## esta diferencia genera un vector de 2 entras
b
c <- c(4,5,6) * c(5,2,1)       #vector de 3 entradas hace operacion entrada por entrada
c
d <- c(1:50,7,99)
length(d)
length(c)
## operaciones logicas con vectores
d >= 45
d==50
d!=35

